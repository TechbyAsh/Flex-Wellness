# Small, stable base image
FROM node:20-alpine

# Create app directory
WORKDIR /app

# Install only production deps first (better caching)
COPY package.json package-lock.json* ./
RUN npm install --omit=dev

# Copy source
COPY src ./src

# Expose container port (documentation for humans)
EXPOSE 3000

# Run the API
CMD ["npm", "start"]

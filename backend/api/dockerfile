# Small, stable base image
FROM node:20-alpine

# Create app directory
WORKDIR /app

# Install only production deps first (better caching)
COPY src/package.json src/package-lock.json* ./
RUN npm install --omit=dev

# Copy source
COPY src/server.js ./

# Expose container port (documentation for humans)
EXPOSE 3000

# Run the API
CMD ["npm", "start"]
